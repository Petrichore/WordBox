<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/originalAndTranslation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="5dp"
        android:layout_toStartOf="@+id/deleteWordBtn"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="Original - awdawdawdada dawwd a dw adawdad "
        android:textSize="20sp" />

    <View
        android:id="@+id/wordDivLine"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/originalAndTranslation"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="10dp"
        android:background="#ACACAC" />

    <ImageView
        android:id="@+id/deleteWordBtn"
        android:layout_width="19dp"
        android:layout_height="19dp"
        android:layout_alignTop="@id/originalAndTranslation"
        android:layout_alignEnd="@id/wordDivLine"
        android:layout_marginTop="5dp"
        android:src="@drawable/remove" />

</RelativeLayout>