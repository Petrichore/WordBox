<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fragment_dialog_bg">

    <TextView
        android:id="@+id/warningText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="30dp"
        android:gravity="center_horizontal"
        android:text="@string/delete_dictionary_warning_text"
        android:textColor="#474747"
        android:textSize="19sp" />

    <Button
        android:id="@+id/delDictionaryCancel"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/warningText"
        android:layout_alignStart="@+id/warningText"
        android:layout_marginStart="30dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/cancel_btn_bg"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="@string/cancel_btn_text"
        android:textAllCaps="false"
        android:textColor="#858585"
        android:textSize="17sp" />

    <Button
        android:id="@+id/delDictionaryCommit"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/warningText"
        android:layout_alignEnd="@+id/warningText"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/commit_btn_bg"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="@string/delete_btn_text"
        android:textAllCaps="false"
        android:textColor="#858585"
        android:textSize="17sp" />

</RelativeLayout>