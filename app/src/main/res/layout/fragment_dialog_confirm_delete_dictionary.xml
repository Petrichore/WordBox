<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/warningText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="10dp"
        android:gravity="center_horizontal"
        android:text="If you delete a dictionary, then all its words are deleted!"
        android:textColor="#474747"
        android:textSize="25sp" />

    <Button
        android:id="@+id/delDictionaryCancel"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/warningText"
        android:layout_alignStart="@+id/warningText"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/cancel_btn_bg"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="Cancel"
        android:textAllCaps="false"
        android:textColor="#858585"
        android:textSize="23sp" />

    <Button
        android:id="@+id/delDictionaryCommit"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/warningText"
        android:layout_alignEnd="@+id/warningText"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/commit_btn_bg"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="Delete"
        android:textAllCaps="false"
        android:textColor="#858585"
        android:textSize="23sp" />

</RelativeLayout>