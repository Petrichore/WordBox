<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fragment_dialog_bg">

    <TextView
        android:id="@+id/wordInfoTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text=""
        android:textColor="#181818"
        android:textSize="24sp" />

    <EditText
        android:id="@+id/addDictionaryName"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/addDictionaryTitle"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/edit_info_field_bg"
        android:ellipsize="end"
        android:gravity="top"
        android:hint="Dictionary Name"
        android:maxLines="2"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="3dp"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/addDictionaryDescription"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_below="@+id/addDictionaryName"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/edit_info_field_bg"
        android:ellipsize="end"
        android:gravity="top"
        android:hint="Describe this dictionary in few words"
        android:maxLines="2"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="3dp"
        android:textSize="18sp" />

    <Button
        android:id="@+id/addDictionaryCancel"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/addDictionaryDescription"
        android:layout_alignStart="@+id/addDictionaryDescription"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/cancel_btn_bg"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="cancel"
        android:textAllCaps="false"
        android:textColor="#858585"
        android:textSize="20sp" />

    <Button
        android:id="@+id/addDictionaryCommit"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/addDictionaryDescription"
        android:layout_alignEnd="@+id/addDictionaryDescription"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/commit_btn_bg"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="commit"
        android:textAllCaps="false"
        android:textColor="#858585"
        android:textSize="20sp" />

</RelativeLayout>