<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/vienna_convention"
        android:text="@string/start_activity_title"
        android:textColor="#444444"
        android:textSize="40sp" />

    <Button
        android:id="@+id/openLib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/text_rotesk_corp_regular"
        android:text="@string/start_activity_open_library"
        android:textAllCaps="false"
        android:padding="10dp"
        android:textColor="#235F4D"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:background="@drawable/open_library_btn_bg"
        android:textSize="26sp" />

</RelativeLayout>